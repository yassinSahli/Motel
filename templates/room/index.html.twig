{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>RoomNumber</th>
                <th>RoomType</th>
                <th>Price</th>
                <th>IsAvailable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.roomNumber }}</td>
                <td>{{ room.roomType }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.isAvailable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_room_new') }}">Create new</a>
{% endblock %}
